// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

//
// Enums
//

enum Role {
  USER
  ADMIN
}

enum Condition {
  poor
  fair
  good
  excellent
}

//
// Core app models
//

model User {
  id               String     @id @default(cuid())
  firstName        String?
  lastName         String?
  name             String?
  email            String     @unique
  emailVerified    DateTime?
  image            String?
  password         String
  role             Role       @default(USER)
  isMerchant       Boolean    @default(false)
  merchantApproved Boolean    @default(false)

  // NextAuth relations
  accounts         Account[]
  sessions         Session[]

  // App-specific  relations
  favorites        Favorite[]
  recipes          Recipe[]   @relation("UserRecipes")
}

model Store {
  id       String   @id @default(cuid())
  name     String
  website  String?
  location String
  hours    String[]
  image    String?
  owner    String
}

enum ItemCategory {
  produce
  meat_seafood
  dairy_eggs
  frozen
  canned
  dry
  condiments_spices
  other
}

model Item {
  id           Int          @id @default(autoincrement())
  name         String
  price        Decimal      @db.Decimal(10, 2)
  unit         String
  availability Boolean
  itemCategory ItemCategory @default(other)
  owner        String
}

model DatabaseItem {
  id           Int          @id @default(autoincrement())
  name         String       @unique
  itemCategory ItemCategory
  recipes      Recipe[]     @relation("RecipeIngredients")
}

model Recipe {
  id                   Int            @id @default(autoincrement())
  name                 String
  cost                 Float
  prepTime             Int
  ingredients          DatabaseItem[] @relation("RecipeIngredients")
  ingredientQuantities String[]
  description          String
  image                String?
  tags                 Tag[]          @relation("RecipeTags")

  authorId             String?
  author               User?          @relation("UserRecipes", fields: [authorId], references: [id], onDelete: Cascade)

  favorites            Favorite[]
}

model Tag {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  category String    // e.g. "Diet", "Appliance"
  recipes  Recipe[]  @relation("RecipeTags")
}

model Favorite {
  id       Int    @id @default(autoincrement())
  userId   String
  recipeId Int

  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  recipe   Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  @@unique([userId, recipeId])
}

model Stuff {
  id        Int       @id @default(autoincrement())
  name      String
  quantity  Int
  owner     String
  condition Condition @default(good)
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}