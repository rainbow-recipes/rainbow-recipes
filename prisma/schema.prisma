// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

//
// Enums
//

enum Role {
  USER
  VENDOR
  ADMIN
}

enum Condition {
  poor
  fair
  good
  excellent
}

//
// Core app models
//

model User {
  id               String     @id @default(cuid())
  firstName        String?
  lastName         String?
  name             String?
  email            String     @unique
  emailVerified    DateTime?
  image            String?
  password         String
  role             Role       @default(USER)
  isMerchant       Boolean    @default(false)
  merchantApproved Boolean    @default(false)

  // NextAuth relations
  accounts Account[]
  sessions Session[]

  // App-specific relations
  favorites Favorite[]
  recipes   Recipe[]   @relation("UserRecipes")
}

model Recipe {
  id          Int        @id @default(autoincrement())
  name        String
  cost        Float
  prepTime    Int
  description String
  image       String?
  tags        Tag[]      @relation("RecipeTags")

  authorId String?
  author   User?         @relation("UserRecipes", fields: [authorId], references: [id], onDelete: Cascade)

  favorites Favorite[]
}

model Tag {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  category String    // e.g. "Diet", "Appliance"
  recipes  Recipe[]  @relation("RecipeTags")
}

model Favorite {
  id       Int    @id @default(autoincrement())
  userId   String
  recipeId Int

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  recipe Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  @@unique([userId, recipeId])
}

model Stuff {
  id        Int       @id @default(autoincrement())
  name      String
  quantity  Int
  owner     String
  condition Condition @default(good)
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}


enum Unit {
  lb
  oz
  g
  kg
  floz
  gal
  qt
}

model Item {
  id            Int       @id @default(autoincrement())
  name          String
  price         Int
  unit          Unit
  availability  Boolean
}

model Location {
  address  String
  city     String
  state    String
  zipcode  Int
}

model Hours {
  Monday     String
  Tuesday    String
  Wednesday  String
  Thursday   String
  Friday     String
  Saturday   String
  Sunday     String
}

model Store {
  name      String
  website   String?
  location  Location
  hours     Hours
  items     Item[]
  owner     String
}

